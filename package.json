{
    "name": "AURAMarketing",
    "version": "1.0.0",
    "description": "Aura Marketing App",
    "main": "main.js",
    "webPreferences": {
        "preload": "./preload.js"
    },
    "type": "commonjs",
    "scripts": {
        "start": "electron .",
        "dev": "cross-env NODE_ENV=development electron .",
        "prod": "cross-env NODE_ENV=production electron ."
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "cross-env": "^7.0.3",
        "electron": "^28.3.3",
        "electron-reload": "^1.5.0"
    },
    "dependencies": {
        "@electron/remote": "^2.1.2",
        "electron-is-dev": "^2.0.0",
        "zeromq": "^6.1.2"
    },
    "build": {
        "appId": "com.eyetracking.app",
        "productName": "EyeTracking App",
        "directories": {
            "output": "build"
        },
        "files": [
            "main.js",
            "Frontend/**/*",
            "Backend/**/*",
            "node_modules/**/*"
        ],
        "win": {
            "target": "nsis",
            "icon": "Frontend/assets/icons/icon.ico"
        }
    }
}
